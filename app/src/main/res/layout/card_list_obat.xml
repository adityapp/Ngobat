<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardView:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/image_obat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="10dp"
                android:layout_toLeftOf="@id/image_obat"/>

            <TextView
                android:id="@+id/nama_obat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Obat"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:maxWidth="200dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_obat"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Menangani : "
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/menangani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:text="Rincian"
                android:maxLines="2"
                android:maxWidth="200dp"/>

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_below="@id/menangani"
                android:text="Detail"
                android:textSize="10sp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_white"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 0,-"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_coins"
                android:layout_toLeftOf="@id/harga"
                android:layout_marginHorizontal="5dp"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>